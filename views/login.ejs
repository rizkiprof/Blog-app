<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>BLOG</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <div class="sign">
      <div class="container">
        <h1><a href="/list">BLOG</a></h1>
        <div class="panel">
          <h2>Login</h2>
          <% if (errors.length > 0) { %>
            <ul class="errors">
              <!-- Tampilkan pesan-pesan error menggunakan method forEach -->
              <% errors.forEach(error => {  %>
                <li> <%= error %> </li>
              <% }); %>
            </ul>
          <% } %>
          <form action="/login" method="post">
            <p>Email</p>
            <input type="text" name="email">
            <p>Kata Sandi</p>
            <input type="password" name="password">
            <input type="submit" value="Login">
            <a href="/list">Kembali ke Artikel</a>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
